<body>

  <!-- ======= Header/Navbar ======= -->
  <%- include('navbar.ejs') %>
  <!-- End Header/Navbar -->

  <main id="main">
  <section class="intro-single">
      <div class="container">
        <div class="row">
          <div class="col-md-12 col-lg-8">
            <div class="title-single-box">
              <h1 class="title-single">Inserisci una nuova proprietà</h1>
               </div>
          </div>
          
        </div>
      </div>
    </section>
    <section class="contact">
      <div class="container">
        <div class="row">
          <div class="col-sm-12 section-t8">
            <div class="row">
              <div class="col-md-7">
                <form action="/nuovaproprieta" method="post" role="form" enctype="multipart/form-data" class="php-email-form">
                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <div class="form-group">
					     <label for="ind">Indirizzo</label>
						 <input type="text" id="ind" name="ind" class="form-control form-control-lg form-control-a" placeholder="Indirizzo">
                        <div class="validate"></div>
                      </div>
                    </div>
					<div class="col-md-6 mb-3">
                      <div class="form-group">
					   <label for="citta">Citta</label>
					   <input type="text" id="citta" name="citta" class="form-control form-control-lg form-control-a" placeholder="Citta">
                        <div class="validate"></div>
                      </div>
                    </div>
					
					<div class="col-md-6 mb-3">
                      <div class="form-group">
					    <label for="tel">Prezzo</label>
						<input type="int" id="prezzo" name="prezzo" class="form-control form-control-lg form-control-a" placeholder="Prezzo">
                        <div class="validate"></div>
                      </div>
                    </div>
					
					<div class="col-md-6 mb-3">
                      <div class="form-group">
					     <label for="categoria">Categoria:</label>
						 <select name="categoria" id="categoria" class="form-control form-control-lg form-control-a">
							<option value="immobili">Immobili</option>
							<option value="fondi">Fondi</option>
					     </select>
                        <div class="validate"></div>
                      </div>
                    </div>
					<div class="col-md-6 mb-3">
                      <div class="form-group">
					   <label for="tipo">Tipo:</label>
						<select name="tipo" id="tipo" class="form-control form-control-lg form-control-a">
						<optgroup label="Immobili">
						<option value="villa">Villa</option>
						<option value="appartamento">Appartamento</option>
						</optgroup>
						<optgroup label="Fondi">
						<option value="negozio">Negozio</option>
						<option value="magazzino">Magazzino</option>
						<option value="ristorante">Ristorante</option>
						</optgroup>
						</select>
                        <div class="validate"></div>
                      </div>
                    </div>
					
					<div class="col-md-6 mb-3">
                      <div class="form-group">
					    <label for="tel">Immagini</label>
						<input type="file" id="immagini" name="immagini" class="form-control form-control-lg form-control-a" multiple>
                        <div class="validate"></div>
                      </div>
                    </div>
					
					<div class="col-md-6 mb-3">
                      <div class="form-group">
                        <input type="checkbox" id="contrattoVendita" name="contrattoVendita" value="contrattoVendita">
						<label for="contrattoVendita"> in vendita</label><br>
						<input type="checkbox" id="contrattoAffitto" name="contrattoAffitto" value="contrattoAffitto">
						<label for="contrattoAffitto"> in affitto</label>
                        <div class="validate"></div>
                      </div>
                    </div>
					
                    <div class="col-md-12 text-center">
                      <input type="submit" value="Inserisci" id="tastoInserisciCliente" class="btn btn-a">
                      <br><br>
                    </div>
                  </div>
                </form>



              </div>
              
            </div>
          </div>
      </div>
	 </div>
    </section>

  </main>
  
